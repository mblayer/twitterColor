{
  "name": "tweetsColor",
  "version": "1.0.0",
  "description": "Cambia el BGcolor de los tweets seg√∫n usuarios seleccionados",
  "manifest_version": 2,
  "permissions": [
    "http://www.twitter.com/",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [{
    "matches": [
      "*://*.twitter.com/*"
    ],
    "js": [
      "content.js"
    ]
  }],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action":{
    "default_title": "Set tweets color.",
    "default_icon": "icons/logo.png",
    "default_popup": "popup.html"

  }
}